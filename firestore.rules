rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow authenticated users to read (admin check is done in app code)
    // Note: In production, use Firebase Custom Claims for better security
    match /users/{userId} {
      // Allow users to read their own profile
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow authenticated users to read all profiles (for admin dashboard)
      // Admin access is verified in application code (adminService.isAdmin)
      allow read: if request.auth != null;
      
      // Allow users to create/update their own profile
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to list all users (for admin dashboard)
    // Admin verification happens in the application layer
    match /users {
      allow list: if request.auth != null;
    }
    
    // User profiles collection (if separate from users)
    match /profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow authenticated users to read (admin check in app code)
      allow read: if request.auth != null;
    }
    
    // Meals collection - users can only access their own meals
    match /meals/{mealId} {
      allow read, write: if request.auth != null && 
                         resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
                    request.resource.data.userId == request.auth.uid;
    }
    
    // Daily logs collection
    match /dailyLogs/{logId} {
      allow read, write: if request.auth != null && 
                         resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
                    request.resource.data.userId == request.auth.uid;
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

