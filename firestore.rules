rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow authenticated users to read (admin check is done in app code)
    // Note: In production, use Firebase Custom Claims for better security
    match /users/{userId} {
      // Allow users to read their own profile
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow authenticated users to read all profiles (for admin dashboard)
      // Admin access is verified in application code (adminService.isAdmin)
      allow read: if request.auth != null;
      
      // Allow users to create/update their own profile
      allow create, update: if request.auth != null && request.auth.uid == userId;
      
      // Allow specific admins to delete users
      allow delete: if request.auth.token.email == 'mohammedodunlami@gmail.com' || 
                   request.auth.token.email == 'iamezekieljeremiah@gmail.com';
    }
    
    // Allow authenticated users to list all users (for admin dashboard)
    // Admin verification happens in the application layer
    match /users {
      allow list: if request.auth != null;
    }
    
    // User profiles collection (if separate from users)
    match /profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow authenticated users to read (admin check in app code)
      allow read: if request.auth != null;
    }
    
    // Meals subcollection - users can only access their own meals
    match /users/{userId}/meals/{mealId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Daily logs subcollection - users can only access their own logs
    match /users/{userId}/dailyLogs/{logId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow listing meals and dailyLogs subcollections
    match /users/{userId}/meals {
      allow list: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId}/dailyLogs {
      allow list: if request.auth != null && request.auth.uid == userId;
    }
    
    // Exercises subcollection - users can only access their own exercises
    match /users/{userId}/exercises/{exerciseId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow listing exercises subcollection
    match /users/{userId}/exercises {
      allow list: if request.auth != null && request.auth.uid == userId;
    }

    // Saved Recipes subcollection - users can only access their own saved recipes
    match /users/{userId}/savedRecipes/{recipeId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId}/savedRecipes {
      allow list: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
